// 试卷整体布局
.paperView {
  &.edit {
    .paperQuestionType {
      margin-bottom: 10px;
      margin-top: 50px;
      &:first-child {
        margin-top: 0;
      }
    }
    .btnBox {
      margin-top: 40px
    }
  }
  &.show {
    .questionTypeText {
      margin-bottom: 10px;
      margin-top: 34px;
      &:first-child {
        margin-top: 0;
      }
    }
  }
  .paperHeader {
    font-size: 15px;
  }
  .paperTitle {
    margin-bottom: 10px;
    line-height: 50px;
    border-bottom: 1px solid #dee;
    b {
      color: #11a63f;
    }
  }
  .paperTodoBox {
    margin-top: 20px;
  }
  .paperStructure {
    margin-top: 20px;
  }
  .questionBox {
    margin-bottom: 26px;
  }
  .paperBody {
    max-height: 550px;
    overflow: auto;
    //padding: 20px;
    .todoTypeBox {
      width: 100px;
      margin-left: 10px;
    }
  }
  .paperQuestionType {
    line-height: 34px;
    background-color: #ccc;
    padding-left: 10px;
  }
  .questionItem0 {
    margin-top: 0 !important;
  }
}